<%- include('../partials/header') %>

<style>
    .admin-container { display: flex; min-height: 100vh; }
    .admin-content { margin-left: 260px; flex: 1; padding: 40px; background: linear-gradient(135deg, #FAFAFA 0%, #F5F5F5 100%); transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
    .admin-sidebar.collapsed ~ .admin-content { margin-left: 70px; }
    .admin-table { width: 100%; background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.08); margin-top: 20px; }
    .admin-table th { background: #546E6A; color: white; padding: 15px; text-align: left; font-weight: 600; }
    .admin-table td { padding: 15px; border-top: 1px solid #f0f0f0; }
    .admin-table tr:hover { background: #f8f8f8; }
    .btn-edit, .btn-delete { padding: 5px 15px; border: none; border-radius: 4px; cursor: pointer; font-size: 12px; margin-right: 5px; }
    .btn-edit { background: #9AB1AE; color: white; }
    .btn-delete { background: #d32f2f; color: white; }
    .modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.6); display: none; justify-content: center; align-items: center; z-index: 1000; }
    .modal-overlay.active { display: flex; }
    .modal-content { background: white; width: 90%; max-width: 700px; max-height: 90vh; border-radius: 8px; overflow-y: auto; padding: 30px; box-shadow: 0 10px 50px rgba(0,0,0,0.3); }
    .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; border-bottom: 2px solid #f0f0f0; padding-bottom: 15px; }
    .modal-header h2 { margin: 0; font-family: 'Playfair Display', serif; color: #546E6A; }
    .modal-close { background: none; border: none; font-size: 28px; cursor: pointer; color: #666; line-height: 1; }
    .modal-close:hover { color: #333; }
    .modal-detail-group { margin-bottom: 20px; }
    .modal-detail-label { font-weight: 600; color: #546E6A; margin-bottom: 5px; display: block; }
    .modal-detail-value { color: #333; padding: 8px 0; }
</style>

<div class="admin-container">
    <%- include('partials/adminSidebarNew') %>
    <div class="admin-content">
        <h1>Manage Bookings</h1>
        <table class="admin-table">
            <thead>
                <tr><th>Name</th><th>Email</th><th>Event Type</th><th>Date</th><th>Status</th><th>Actions</th></tr>
            </thead>
            <tbody>
                <% if (typeof bookings !== 'undefined' && bookings.length > 0) { %>
                    <% bookings.forEach(booking => { %>
                        <tr>
                            <td><%= booking.firstName %> <%= booking.lastName %></td>
                            <td><%= booking.email %></td>
                            <td><%= booking.eventType %></td>
                            <td><%= new Date(booking.date).toLocaleDateString() %></td>
                            <td><%= booking.status %></td>
                            <td>
                                <button class="btn-edit" onclick="viewBooking('<%= booking._id %>')">View</button>
                                <select onchange="fetch('/admin/bookings/<%= booking._id %>/status', {method:'PUT',headers:{'Content-Type':'application/json'},body:JSON.stringify({status:this.value})}).then(()=>location.reload())">
                                    <option value="New" <%= booking.status==='New'?'selected':'' %>>New</option>
                                    <option value="Read" <%= booking.status==='Read'?'selected':'' %>>Read</option>
                                    <option value="Confirmed" <%= booking.status==='Confirmed'?'selected':'' %>>Confirmed</option>
                                </select>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr><td colspan="6" style="text-align: center;">No bookings found</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Booking Detail Modal -->
<div class="modal-overlay" id="bookingModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Booking Details</h2>
            <button class="modal-close" onclick="closeBookingModal()">&times;</button>
        </div>
        <div id="bookingModalContent">
            <!-- Content will be loaded here -->
        </div>
    </div>
</div>

<script src="/js/script.js"></script>
<script>
async function viewBooking(id) {
    try {
        const response = await fetch(`/admin/bookings/${id}`);
        const result = await response.json();
        
        if (result.success) {
            const booking = result.booking;
            const content = `
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Name:</span>
                    <span class="modal-detail-value">${booking.firstName} ${booking.lastName || ''}</span>
                </div>
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Email:</span>
                    <span class="modal-detail-value">${booking.email}</span>
                </div>
                ${booking.phone ? `
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Phone:</span>
                    <span class="modal-detail-value">${booking.phone}</span>
                </div>
                ` : ''}
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Event Type:</span>
                    <span class="modal-detail-value">${booking.eventType}</span>
                </div>
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Event Date:</span>
                    <span class="modal-detail-value">${new Date(booking.date).toLocaleDateString()}</span>
                </div>
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Location:</span>
                    <span class="modal-detail-value">${booking.location}</span>
                </div>
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Number of Guests:</span>
                    <span class="modal-detail-value">${booking.guestCount}</span>
                </div>
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Package Type:</span>
                    <span class="modal-detail-value">${booking.packageType.charAt(0).toUpperCase() + booking.packageType.slice(1)}</span>
                </div>
                ${booking.serviceId && booking.serviceId.name ? `
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Selected Service:</span>
                    <span class="modal-detail-value">${booking.serviceId.name}</span>
                </div>
                ` : ''}
                ${booking.message ? `
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Message:</span>
                    <div class="modal-detail-value" style="background: #f5f5f5; padding: 15px; border-radius: 4px; margin-top: 5px;">${booking.message}</div>
                </div>
                ` : ''}
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Status:</span>
                    <span class="modal-detail-value" style="display: inline-block; padding: 5px 15px; background: ${booking.status === 'Confirmed' ? '#4caf50' : booking.status === 'Read' ? '#2196f3' : '#ff9800'}; color: white; border-radius: 20px; font-size: 12px; font-weight: 600;">${booking.status}</span>
                </div>
                <div class="modal-detail-group">
                    <span class="modal-detail-label">Submitted:</span>
                    <span class="modal-detail-value">${new Date(booking.createdAt).toLocaleString()}</span>
                </div>
            `;
            
            document.getElementById('bookingModalContent').innerHTML = content;
            document.getElementById('bookingModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        } else {
            alert('Error loading booking details');
        }
    } catch (error) {
        console.error('Error loading booking:', error);
        alert('Error loading booking details');
    }
}

function closeBookingModal() {
    document.getElementById('bookingModal').classList.remove('active');
    document.body.style.overflow = 'auto';
}

// Close modal on outside click
document.getElementById('bookingModal').addEventListener('click', function(e) {
    if (e.target === this) closeBookingModal();
});
</script>
</body>
</html>
